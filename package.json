{
  "name": "next-redux-starter",
  "description": "Production ready boilerplate for Next.js",
  "license": "MIT",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "node server.js",
    "pretty": "prettier --write --tab-width 2 \"**/*.js\"",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "*.js": [
      "yarn pretty"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@reduxjs/toolkit": "^1.9.5",
    "classnames": "^2.5.1",
    "dotenv": "^8.2.0",
    "embla-carousel": "^8.5.2",
    "embla-carousel-react": "^8.5.2",
    "fastify": "^5.3.2",
    "next": "^15.3.1",
    "next-plugin-preact": "^3.0.7",
    "next-runtime-dotenv": "^1.3.0",
    "patch-package": "^8.0.0",
    "preact": "^10.26.5",
    "preact-render-to-string": "^6.5.13",
    "radix-ui": "^1.3.4",
    "react": "npm:@preact/compat@^18.3.1",
    "react-dom": "npm:@preact/compat@^18.3.1",
    "react-redux": "^9.1.2",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.2.2",
    "redux-thunk": "^2.3.0",
    "wretch": "^2.11.0"
  },
  "devDependencies": {
    "@types/node": "^18.8.5",
    "@types/react": "^18.0.21",
    "@types/react-redux": "^7.1.24",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.9",
    "@types/redux-thunk": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.57.0",
    "eslint-config-next": "^12.3.1",
    "husky": "^4.2.5",
    "lint-staged": "10.2.13",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "redux-logger": "^3.0.6",
    "tailwindcss": "^3.1.8",
    "typescript": "^5.8.2"
  },
  "overrides": {
    "@prefresh/next": "1.7.0",
    "@prefresh/webpack": "4.0.2"
  },
  "engines": {
    "node": ">=20"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
